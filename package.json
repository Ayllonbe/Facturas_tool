{
    "name": "AcanataCRM",
    "version": "1.0.0",
    "main": "main.js",
    "description": "Un Simple CRM que genera facturas para Acanata S.L.",
    "author": "Aarón Ayllón Benítez <ayllonbenitez.aaron@gmail.com>",
    "updateSite": "https://github.com/Ayllonbe/Facturas_tool",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder --win"
    },
    "build": {
    "appId": "com.acanata.id",
    "productName": "AcanataCRM",
    "files": [
        "app/**/*",
        "main.js",
        "preload.js",
        "node_modules/**/*",
        "loading.html",
        "app/main/invoices.db"
    ],
    "extraResources": [
        {
            "from": "app/main",
            "to": "app/main",
            "filter": [
                "**/*"
            ]
        },
        {
            "from": "app/python",
            "to": "app/python",
            "filter": [
                "**/*"
            ]
        },
        {
            "from": "app/assets",
            "to": "app/assets",
            "filter": [
                "**/*"
            ]
        },
        {
            "from": "app/renderer",
            "to": "app/renderer",
            "filter": [
                "**/*"
            ]
        }
    ],
    "win": {
        "target": [
            {
                "target": "nsis",
                "arch": [
                    "x64"
                ]
            },
            {
                "target": "portable",
                "arch": [
                    "x64"
                ]
            }
        ],
        "icon": "app/assets/icono.ico"
    },
    "portable": {
        "artifactName": "${productName}-${version}-${arch}-portable.${ext}"
    },
    "nsis": {
        "oneClick": false,
        "allowElevation": true,
        "allowToChangeInstallationDirectory": true,
        "installerIcon": "app/assets/icono.ico",
        "uninstallerIcon": "app/assets/icono.ico",
        "installerHeaderIcon": "app/assets/icono.ico",
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true,
        "shortcutName": "AcanataCRM"
    },
    "publish": [
        {
            "provider": "github",
            "owner": "Ayllonbe",
            "repo": "Facturas_tool"
        }
    ]
}
}
